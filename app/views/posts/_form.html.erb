<div class="container grid g-col-6">

  <h1 class= "text-center f-5 mt-5 mb-5"> New Post</h1>
  <%= form_with model: @post do |form| %>
    <div>
      <%= form.label :title, class: "form-label fs-5 " %><br>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div>
      <%= form.label :body, class: "form-label fs-5"%><br>
      <%= form.text_area :body, class: "form-control mb-5" %>
    </div>

    <div>
      <%= form.submit class: "btn btn-success"%>
    </div>
  <% end %>
</div>